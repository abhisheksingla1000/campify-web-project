<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit Camp <%=camp.name%></h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[name]" placeholder="Name" value="<%=camp.name%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[src]" placeholder="Image src" value="<%=camp.src%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[description]" placeholder="Description" value="<%=camp.description%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>

        </div>
    </div>
<%- include("../partials/footer") %>